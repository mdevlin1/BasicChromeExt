{
  "manifest_version": 2,

  "name": "GoogleFu Helper",
  "description": "Makes it easy to use advanced Google search arguments",
  "version": "1.0",

  "icons": {
    "48": "icon.png"
  },

  "permissions": [
    "tabs", "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  }
}